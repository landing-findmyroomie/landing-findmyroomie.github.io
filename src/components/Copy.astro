---
import Button from "../components/Button.astro";
---

<div class="flex flex-col container1">
  <h1
    class="copy self-center grad py-2 mb-5 text-7xl tracking-thight font-bold text-transparent bg-clip-text"
  >
    Find your perfect match <br /> not just in love.
  </h1>
  <p class="self-center font-light text-myBlack sm:text-2xl dark:text-gray-400 text-copy">
    Connect with like-minded people and find your perfect roommate.
  </p>
  <div class="flex flex-col self-center mt-40 w-40">
    <Button class1="bg-transparent border border-myBlack" url="/waitlist" />
    <div class="flex flex-col self-center mt-10 cursor-pointer">
      <a href="/" class="text-sm font-semibold text-myBlack">Learn more</a>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-8 h-8 mt-2 self-center text-myBlack"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3"></path>
      </svg>
    </div>
  </div>
</div>

<style>
  .copy {
    text-align: center;
    width: 80vw;
  }

  .grad {
    background-image: var(--accent-gradient-text);
  }

@media (max-width: 600px) {
    .container1 {
      width: 100vw;
      margin-left: 3vw;
      margin-top: 2em;
    }

    .text-copy {
      text-align: center;
    }
  }
</style>
